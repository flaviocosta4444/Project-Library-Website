@model B_LEI.Models.Editora

@{
    ViewData["Title"] = "Detalhes da Editora";
}

<div class="container py-5">
    <!-- Cabeçalho -->
    <div class="text-center mb-4">
        <h1 class="text-primary">Detalhes da Editora</h1>
        <p class="text-muted">Confira as informações da editora abaixo.</p>
    </div>

    <!-- Detalhes da Editora -->
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h4>@Model?.Nome</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-secondary">Nome:</dt>
                <dd class="col-sm-9">@Model?.Nome</dd>

                <dt class="col-sm-3 text-secondary">Descrição:</dt>
                <dd class="col-sm-9">@Model?.Descricao</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.EditoraId" class="btn btn-warning btn-lg rounded-pill shadow me-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill shadow">Voltar à Lista</a>
        </div>
    </div>
</div>
