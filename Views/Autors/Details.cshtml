@model B_LEI.Models.Autor

@{
    ViewData["Title"] = "Detalhes do Autor";
}

<div class="container py-5">
    <!-- Cabeçalho -->
    <div class="text-center mb-4">
        <h1 class="text-primary">Detalhes do Autor</h1>
        <p class="text-muted">Veja as informações do autor abaixo.</p>
    </div>

    <!-- Detalhes do Autor -->
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h4>@Model?.Nome</h4>
        </div>
        <div class="card-body">
            <h4>Informações do Autor</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2 text-secondary">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2 text-secondary">
                    @Html.DisplayNameFor(model => model.Foto)
                </dt>
                <dd class="col-sm-10">
                    <img src="~/FotoAutor/@Model.Foto" alt="@Model.Nome" style="max-width: 100px; max-height: 100px;" />
                </dd>
            </dl>
        </div>
    </div>

    <!-- Links de navegação -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.AutorId" class="btn btn-warning btn-lg rounded-pill shadow">Editar</a> |
        <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill shadow ms-2">Voltar para a Lista</a>
    </div>
</div>
