@model B_LEI.Models.Autor

@{
    ViewData["Title"] = "Editar Autor";
}

<div class="container py-5">
    <!-- Cabeçalho -->
    <div class="text-center mb-4">
        <h1 class="text-primary">Editar Autor</h1>
        <p class="text-muted">Atualize as informações do autor abaixo.</p>
    </div>

    <!-- Formulário de Edição -->
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h4>@Model?.Nome</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AutorId" />

                <!-- Nome do Autor -->
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label text-secondary">Nome do Autor</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do autor" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <!-- Foto Atual do Autor -->
                <div class="mb-3">
                    <label class="form-label text-secondary">Foto Atual</label>
                    <div>
                        <img src="~/FotoAutor/@Model.Foto" alt="@Model.Nome" style="max-width: 100px; max-height: 100px;" />
                    </div>
                    <small class="form-text text-muted">Se desejar alterar a foto, carregue uma nova imagem abaixo.</small>
                </div>

                <!-- Novo campo para trocar a Foto -->
                <div class="mb-3">
                    <label asp-for="Foto" class="form-label text-secondary">Nova Foto</label>
                    <input type="file" asp-for="Foto" class="form-control shadow-sm" />
                    <small class="form-text text-muted">Carregue uma nova foto para o autor.</small>
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>

                <!-- Botões -->
                <div class="text-center mt-4">
                    <input type="submit" value="Salvar" class="btn btn-success btn-lg rounded-pill shadow" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill shadow ms-2">Voltar para a Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
