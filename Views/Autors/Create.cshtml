@model B_LEI.Models.AutorViewModel

@{
    ViewData["Title"] = "Criar Autor";
}

<div class="container py-5">
    <!-- Título estilizado -->
    <div class="text-center mb-4">
        <h1 class="text-primary">Adicionar Novo Autor</h1>
        <p class="text-muted">Preencha as informações abaixo para adicionar um novo autor.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h4 class="card-title text-center text-secondary mb-4">Informações do Autor</h4>

                    <!-- Formulário -->
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: none;"></div>

                        <!-- Nome -->
                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="form-label text-primary"></label>
                            <input asp-for="Nome" class="form-control shadow-sm" placeholder="Nome do autor..." />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <!-- Foto -->
                        <div class="form-group mb-3">
                            <label asp-for="Foto" class="form-label text-primary"></label>
                            <input type="file" asp-for="Foto" class="form-control shadow-sm" />
                            <small class="form-text text-muted">Carregue uma foto para o autor.</small>
                            <span asp-validation-for="Foto" class="text-danger"></span>
                        </div>

                        <!-- Botões -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-lg">
                                <i class="bi bi-plus-circle"></i> Criar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill shadow-lg">
                                <i class="bi bi-arrow-left"></i> Voltar à Lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
