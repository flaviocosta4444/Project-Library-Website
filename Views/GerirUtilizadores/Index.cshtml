@model IEnumerable<B_LEI.Models.ApplicationUser>

@{
    ViewData["Title"] = "Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Título e botão de criação -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Gerenciamento de Usuários</h1>
        <a class="btn btn-primary btn-lg rounded-pill shadow-lg" asp-action="Create">
            <i class="bi bi-person-plus"></i> Criar novo Administrador
        </a>
    </div>

    <!-- Tabela de usuários -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-primary">
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.DataCriada)</th>
                    <th>@Html.DisplayNameFor(model => model.Morada)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(userItem => user.UserName)</td>
                        <td>@Html.DisplayFor(userItem => user.Email)</td>
                        <td>@Html.DisplayFor(userItem => user.DataCriada)</td>
                        <td>@Html.DisplayFor(userItem => user.Morada)</td>
                        <td class="text-center">
                            <!-- Botões de ação -->
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm rounded-pill me-2 shadow">
                                <i class="bi bi-eye"></i> Estado
                            </a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm rounded-pill shadow">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
