@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
		if (User.IsInRole("admin"))
		{
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="ConfirmarEmailsAdmin" asp-action="Index">Confirmar Emails</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="GerirUtilizadores" asp-action="Index">GerirUtilizadores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
		}
		else if (User.IsInRole("bibliotecario"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Livros" asp-action="ListaRequisicoes">Ver Requisições</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Categorias" asp-action="Index">Gerir Categorias</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Editoras" asp-action="Index">Gerir Editoras</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Autors" asp-action="Index">Gerir Autores</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Livros" asp-action="Index">Gerir Livros</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
		else if (User.IsInRole("leitor"))
		{
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
		}
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
