@model IEnumerable<B_LEI.Models.Livro>

@{
    ViewData["Title"] = "Lista de Livros";
}

<div class="container py-5">
    <!-- Cabeçalho -->
    <div class="text-center mb-4">
        <h1 class="text-primary">Lista de Livros</h1>
        <p class="text-muted">Lista dos livros disponíveis no sistema.</p>
        <a asp-action="Create" class="btn btn-success btn-lg rounded-pill shadow-lg">
            <i class="bi bi-plus-circle"></i> Adicionar Novo Livro
        </a>
    </div>

    <!-- Tabela de Livros -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                    <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                    <th>@Html.DisplayNameFor(model => model.Edicao)</th>
                    <th>@Html.DisplayNameFor(model => model.AnoPublicacao)</th>
                    <th>@Html.DisplayNameFor(model => model.Capa)</th>
                    <th>@Html.DisplayNameFor(model => model.Descricao)</th>
                    <th>@Html.DisplayNameFor(model => model.Autor)</th>
                    <th>@Html.DisplayNameFor(model => model.Categoria)</th>
                    <th>@Html.DisplayNameFor(model => model.Editora)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                        <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                        <td>@Html.DisplayFor(modelItem => item.Edicao)</td>
                        <td>@Html.DisplayFor(modelItem => item.AnoPublicacao)</td>
                        <td>
                            <img src="~/FotoLivro/@item.Capa" alt="@item.Titulo" style="max-width: 100px; max-height: 100px;" />
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                        <td>@Html.DisplayFor(modelItem => item.Autor.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Categoria.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Editora.Nome)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.LivroId" class="btn btn-warning btn-sm rounded-pill shadow">
                                Editar
                            </a> |
                            <a asp-action="Details" asp-route-id="@item.LivroId" class="btn btn-info btn-sm rounded-pill shadow">
                                Detalhes
                            </a> |
                            <a asp-action="Delete" asp-route-id="@item.LivroId" class="btn btn-danger btn-sm rounded-pill shadow">
                                Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
