@model B_LEI.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="container py-5">
    <!-- Cabeçalho -->
    <div class="text-center mb-4">
        <h1 class="text-primary">Detalhes da Categoria</h1>
        <p class="text-muted">Veja abaixo as informações da categoria selecionada.</p>
    </div>

    <!-- Detalhes da Categoria -->
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h4>@Model?.Nome</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-secondary">Nome:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-4 text-secondary">Descrição:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Descricao)</dd>
            </dl>
        </div>
    </div>

    <!-- Botões de Ação -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.CategoriaId" class="btn btn-primary btn-lg rounded-pill shadow">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill shadow ms-2">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>
</div>